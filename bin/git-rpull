#!/bin/bash
# recursive git pull
set -e
shopt -s dotglob
log_file="$(pwd)/up_$(date +%F)"
[ -f "$log_file" ] && { echo "Log file $log_file already exists"; exit 1; }
pr() {
	echo "$(tput bold)>>> ----- $@ $(tput sgr0)"
	echo "$(tput bold)>>> ----- $@ $(tput sgr0)" >>$log_file
}
update() {
	for d in "$@"; do
		[ -d "$d" -a \! -L "$d" ] || continue
		cd -- "$d"
		if [ -d ".git" ]; then
			pr $PWD
			git pull >>$log_file 2>&1 || true
		else
			update *
		fi
		cd ..
	done
}
[ $# -gt 0 ] || { echo "usage: $0 DIR [DIR ..]"; exit 1; }
update $@
echo $log_file
